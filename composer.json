{
  "name": "mortenscheel/php-dependency-installer",
  "description": "Automate dependency installation and setup with reusable recipes",
  "license": "MIT",
  "authors": [
    {
      "name": "Morten Scheel",
      "email": "morten@mortenscheel.com"
    }
  ],
  "homepage": "https://github.com/mortenscheel/php-dependency-installer",
  "keywords": [
    "PHP",
    "Dependency",
    "Installer",
    "Automation",
    "Developer-tools",
    "Laravel",
    "Tools"
  ],
  "bin": [
    "bin/pdi"
  ],
  "require": {
    "symfony/console": "^4.0|^5.0",
    "symfony/filesystem": "^4.0|^5.0",
    "symfony/process": "^4.2|^5.0",
    "symfony/yaml": "^4.4",
    "symfony/var-dumper": "^4.4|^5.0",
    "tightenco/collect": "^6.14"
  },
  "autoload": {
    "psr-4": {
      "MortenScheel\\PhpDependencyInstaller\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MortenScheel\\PhpDependencyInstaller\\Tests\\": "tests"
    }
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.16",
    "phpunit/phpunit": "^7.5|^8|^9"
  }
}
